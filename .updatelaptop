#!/bin/sh

set -e

UPDATE_INTERVAL=86400
LAST_UPDATE_TIME_FILE=".last-update-time"
LAST_UPDATE_HASH_FILE=".last-update-hash"
LOCK_FILE=".lock"

# cd to repo dir
file_path=$0
if [[ -h "$file_path" ]]; then
    file_path=$(readlink $file_path)
fi
cd $(dirname  $file_path)

# Ensure expected files exist
touch "$LAST_UPDATE_TIME_FILE"
touch "$LAST_UPDATE_HASH_FILE"

# Read values
last_update_time=$(cat "$LAST_UPDATE_TIME_FILE")
last_update_hash=$(cat "$LAST_UPDATE_HASH_FILE")

# Make sure only one update process is running
[[ -e $LOCK_FILE ]] && exit
function clear_lock {
    rm $LOCK_FILE
}
trap clear_lock EXIT
touch $LOCK_FILE

# Only update once per update interval
current_time=$(date +%s)
time_since_last_update=$(( current_time - last_update_time ))
[[ $time_since_last_update -lt $UPDATE_INTERVAL ]] && exit

echo "$current_time" > "$LAST_UPDATE_TIME_FILE"

# Update the repo
git pull

# Check if there are new updates to the repo
current_hash=$(git rev-parse HEAD)
[[ "$last_update_hash" == "$current_hash" ]] && exit

# Run the update
python3 update.py

# Update the last updated timestamp
echo "$current_hash" > "$LAST_UPDATE_HASH_FILE"