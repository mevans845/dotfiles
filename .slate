config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

alias W screenSizeX
alias W_2 ${W}/2
alias W_3 ${W}/3
alias H screenSizeY
alias H_2 ${H}/2

# dev_big
#  / Chrome \--- / Vim \--- / iTerm \---
#  |            |          |            |
#  |            |          |            |
#  `------------^----------^------------'
alias WW ${W_3}
alias winsize ${WW};${H}
alias shortwin ${WW};${H}*0.8
alias widewin ${WW}*2;${H}
alias browser move 0;0 ${shortwin} | move ${WW};0 ${shortwin}
alias devtools move ${WW};0 ${shortwin}

layout dev_big 'Google Chrome'   ${browser}
layout dev_big 'Firefox'         ${browser}
layout dev_big 'Safari'          ${browser}
layout dev_big 'iTerm'           move 0;0       ${winsize}
layout dev_big 'MacVim'          move ${WW};0   ${widewin}
layout dev_big 'Slack'               move 2*${WW};${H_2} ${WW};${H_2}

# dev
#  / Vim \----------- / iTerm \--------
#  |                 |                 |
#  |                 |                 |
#  `-----------------^-----------------'
alias WW ${W_2}
alias winsize ${WW};${H}
alias shortwin ${WW};${H}*0.8

layout dev 'Google Chrome' move 0;0           ${shortwin}
layout dev 'Firefox'       move 0;0           ${shortwin}
layout dev 'Safari'        move 0;0           ${shortwin}
layout dev 'iTerm'         move 0;0           ${winsize}
layout dev 'MacVim'        move ${WW};0       ${winsize}
layout dev 'Slack'         move ${W_2};${H_2} ${W_2};${H_2} 0

default dev count:2
default dev count:1

# Aero-like move and resize
bind up:alt          chain push up bar-resize:screenSizeY | push left bar-resize:screenSizeX/2 | push right bar-resize:screenSizeX/2
bind down:alt        chain push down bar-resize:screenSizeY/2 | push up bar-resize:screenSizeY/2
bind left:alt,ctrl   push left bar-resize:screenSizeX/2
bind right:alt,ctrl  push right bar-resize:screenSizeX/2

bind 1:alt move 0;0 screenSizeX/3;screenSizeY
bind 2:alt move screenSizeX/3;0 screenSizeX/3;screenSizeY
bind 3:alt move 2*screenSizeX/3;0 screenSizeX/3;screenSizeY

bind 1:ctrl,cmd layout dev_big
bind 2:ctrl,cmd layout dev
bind r:ctrl,cmd relaunch
